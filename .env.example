# ======================================
# ColorfulMe Environment Configuration
# ======================================

# Flask
SESSION_SECRET=replace-with-strong-secret
DATABASE_URL=sqlite:///colorfulme.db
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=5003

# ======================================
# AI + Moderation
# ======================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-image-1.5
OPENAI_MODEL_FALLBACK=gpt-image-1-mini
OPENAI_MODEL_ECONOMY=gpt-image-1.5
OPENAI_MODEL_BALANCED=gpt-image-1.5
OPENAI_MODEL_PREMIUM=gpt-image-1.5
OPENAI_QUALITY_ECONOMY=low
OPENAI_QUALITY_BALANCED=medium
OPENAI_QUALITY_PREMIUM=high
OPENAI_IMAGE_QUALITY_DEFAULT=medium
STRICT_MODERATION=true
# Local/dev fallback if OpenAI key is missing
ALLOW_FAKE_AI=true

# ======================================
# Authentication
# ======================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_DEV_EMAIL=demo@colorfulme.app

# Email OTP provider (Resend-compatible)
RESEND_API_KEY=
RESEND_FROM_EMAIL=no-reply@yourdomain.com

# ======================================
# Stripe Billing
# ======================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_STUDIO=
STRIPE_PRICE_LIFETIME=

# ======================================
# S3-Compatible Storage
# ======================================
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
# Optional for non-AWS providers
S3_ENDPOINT_URL=

# ======================================
# Programmatic SEO Pipeline
# ======================================
PROGRAMMATIC_CONTENT_SOURCE=content/programmatic_content.csv
PROGRAMMATIC_CONTENT_SHEET=content
PROGRAMMATIC_CONTENT_MANIFEST=static/data/programmatic_content_manifest.json
