# ======================================
# ReceiptForge Environment Configuration
# ======================================

# Required: Flask Secret Key
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your-secret-key-here-change-in-production

# Required: Database URL
# SQLite (development): sqlite:///receiptforge.db
# PostgreSQL (production): postgresql://user:password@localhost:5432/receiptforge
DATABASE_URL=sqlite:///receiptforge.db

# ======================================
# Stripe Configuration (Required for subscriptions)
# ======================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ======================================
# Optional Configuration
# ======================================

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Debug Mode (true/false)
DEBUG=false

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
REQUIRE_AUTH_FOR_FREE=false

# Programmatic Content Backend
# Single spreadsheet source for all programmatic pages/tools.
PROGRAMMATIC_CONTENT_SOURCE=content/programmatic_content.csv
PROGRAMMATIC_CONTENT_SHEET=content
PROGRAMMATIC_CONTENT_MANIFEST=static/data/programmatic_content_manifest.json

# PDF Generation Settings
PDF_FONT=Courier
PDF_FONT_SIZE=10

# ======================================
# Deployment Configuration
# ======================================

# Port (for local development)
PORT=5000

# Host
HOST=0.0.0.0
